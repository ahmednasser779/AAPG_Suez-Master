<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blog.SubscribeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/appBar_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryBlog"
            >
            <ImageView
                android:id="@+id/icon_arrow_back"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                />
            <ImageView
                android:src="@drawable/blog2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Get Notifications For New Articles Subscribe Here!"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryBlog"
            android:layout_margin="16dp"
            />

        <EditText
            android:id="@+id/subscribe_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/subscribe_edit_text_shape"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:hint="Name..."
            android:textSize="20sp"
            android:textColorHint="@color/colorPrimaryBlog"
            android:padding="16dp"
            android:inputType="textPersonName"
            android:ems="10"
            />

        <EditText
            android:id="@+id/subscribe_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/subscribe_edit_text_shape"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:hint="Email..."
            android:textSize="20sp"
            android:textColorHint="@color/colorPrimaryBlog"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            />

        <Button
            android:id="@+id/subscribe_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@drawable/subscribe_button_shape"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>